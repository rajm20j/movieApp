<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".writeAStory.WriteAStory"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/write_a_story_series_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/roboto_bold"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/almost_white"
                android:textSize="40sp"
                android:layout_marginTop="15dp"
                android:text="@string/seasons"/>
            <EditText
                android:id="@+id/write_a_story_title"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/roboto_slab"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/almost_white"
                android:textColorHint="@color/off_white"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:inputType="textCapWords"
                android:layout_marginTop="15dp"
                android:hint="@string/add_title"
                android:background="@color/almost_black"
                android:padding="10dp"
                android:elevation="1dp"
                android:translationZ="2dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="3dp"
                android:background="@color/colorPrimary"/>

            <EditText
                android:id="@+id/write_a_story_overview"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/roboto_slab_light"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/almost_white"
                android:textColorHint="@color/off_white"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:hint="@string/add_your_story"
                android:background="@color/almost_black"
                android:padding="10dp"
                android:elevation="1dp"
                android:translationZ="2dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/write_a_story_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="@string/submit"
                android:theme="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:rippleColor="@color/almost_white"
                android:textColor="@color/almost_white"/>
            <ProgressBar
                android:id="@+id/pb_write_a_story"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:minWidth="15dp"
                android:maxWidth="15dp"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>